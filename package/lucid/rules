#!/usr/bin/make -f

XBUILD=MONO_SHARED_DIR=/tmp xbuild build/build.mono.proj /p:RootDir=.
build: build-stamp
build-stamp:
	dh_testdir
	$(XBUILD) /target:Compile
	touch build-stamp

clean:
	dh_testdir
	$(XBUILD) /target:Clean
	rm -f *-stamp
	dh_clean

install: build install-stamp
install-stamp:
	dh_testdir
	dh_testroot
	dh_clean -k
	$(XBUILD) /target:Install /p:InstallDir=../debian/tmp
	dh_installdirs
	dh_install
	dh_installdocs
	dh_installchangelogs
	dh_desktop
	dh_icons
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_gencontrol
	dh_md5sums
	dh_builddeb
	touch install-stamp

binary-indep: install

binary: binary-indep
