<project name="LexicalTools.Tests" default="build" basedir=".">
  <target name="build">
	<csc target="library"
		output="${project.output.dir}/LexicalTools.Tests.dll"
		doc="${project.output.dir}/doc/LexicalTools.Tests.xml"
		debug="${build.debug}"
		define="${build.defines}">
	  <nowarn>
		<warning number="618,672"/>
		<warning number="1699" if="${runtime.version=='2.0'}"/>
	  </nowarn>
	  <sources basedir=".">
		<include name="**/*.cs" />
	  </sources>
	  <references basedir="${project.output.dir}">
		<include name="LexicalTools.dll" />
		<include name="LexicalModel.dll" />
		<include name="WeSay.Project.dll" />
		<include name="WeSay.Data.dll" />
		<include name="WeSay.Foundation.dll" />
		<include name="WeSay.UI.dll" />
		<include name="TestUtilities.dll" />
		<include name="nunit.framework.dll" />
		<include name="NUnitForms.dll" />
		<include name="System.Drawing.dll" />
		<include name="System.Windows.Forms.dll" />
		<include name="Palaso.dll" />
		<include name="PalasoReporting.dll" />
	  </references>
	</csc>
  </target>

  <target name="package">
	<copy todir="${package.src.dir}/icu.net">
	  <fileset refid="source-files" />
	</copy>
  </target>

</project>
