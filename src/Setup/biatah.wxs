<?xml version="1.0" encoding="utf-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <Fragment>
	<DirectoryRef Id="biatahSampleDir" >

	  <Component Id ="biatahShortcuts" Guid ="FB0973B3-8502-42ea-9B78-0879A3CAD40B">
		<Shortcut Id="RunBiatahShortcut"  Directory="WeSayShortcutDir" Name="Run Biatah Sample"
			Target="[!WeSay.App.exe]" Arguments ='"[!biatah.lift]"' WorkingDirectory="biatahWeSay" Icon ="SampleRunIcon" />

		<Shortcut Id="SetupBiatahShortcut"  Directory="WeSayShortcutDir" Name="Configure Biatah Sample"
				  Target="[!WeSayConfigurationTool]"  Arguments ='"[!biatah.WeSayConfig]"'
		   WorkingDirectory="biatahWeSay" Icon ="SampleSetupIcon" />
		<!-- this Registry entry is required because we have shortcuts that aren't 'advertised',
					  which we have because 'advertised shortcuts can't have targets. Don't as ME.
					  See: http://www.nabble.com/ICE38-and-ICE43-on-Shortcuts-t1409061.html -->
		<Registry Root="HKCU" Key="SOFTWARE\Components\BiatahSamples" KeyPath="yes" />

	  </Component>

		<Component Id="biatahMain" Guid="{5008C03F-7946-4147-96B1-442AD4999FA9}">
		  <File Id="writingSystemPrefs.xml" Name="writingSystemPrefs.xml" KeyPath="yes" Source="..\..\sampleprojects\biatah\writingSystemPrefs.xml" />
		  <File Id="biatah.lift" Name="biatah.lift" KeyPath="yes" Source="..\..\sampleprojects\biatah\biatah.lift" />
		  <File Id="biatah.WeSayConfig" Name="biatah.WeSayConfig"  Source="..\..\sampleprojects\biatah\biatah.WeSayConfig" />
		</Component>
		<Directory Id="biatahCacheDir" Name="Cache">
		  <Component Id="biatahCache" Guid="{EF2EBD26-0A05-4DC1-8B74-C4EFDA1547F6}">
			<File Id="biatah.words" Name="biatah.words" Source="..\..\sampleprojects\biatah\cache\biatah.words" />
			<File Id="AddExamples.cache" Name="Add Examples.cache" KeyPath="yes" Source="..\..\sampleprojects\biatah\Cache\Add Examples.cache" />
			<File Id="AssumeCacheIsFresh" Name="AssumeCacheIsFresh" Source="..\..\sampleprojects\biatah\Cache\AssumeCacheIsFresh" />
			<File Id="AddMeanings.cache" Name="Add Meanings.cache" Source="..\..\sampleprojects\biatah\Cache\Add Meanings.cache" />
	 <!-- this isn't shown in the dashboard now, so it isn't created.
			And if it was, it would have a new name
			<File Id="Dictionary.cache" Name="Dictionary.cache"  Source="..\..\sampleprojects\biatah\Cache\Dictionary.cache" /> -->
			<File Id="LexEntrysortedbybth.cache" Name="LexEntry sorted by bth.cache"  Source="..\..\sampleprojects\biatah\Cache\LexEntry sorted by bth.cache" />
			<File Id="LexEntrysortedbybthqipa.cache" Name="LexEntry sorted by bth-fonipa.cache"  Source="..\..\sampleprojects\biatah\Cache\LexEntry sorted by bth-fonipa.cache" />
			<File Id="LexEntrysortedbyen.cache" Name="LexEntry sorted by en.cache"  Source="..\..\sampleprojects\biatah\Cache\LexEntry sorted by en.cache" />
			<File Id="LexEntrysortedbySemanticDomainDdp4.cache" Name="LexEntry sorted by SemanticDomainDdp4.cache" Source="..\..\sampleprojects\biatah\Cache\LexEntry sorted by SemanticDomainDdp4.cache" />
			<File Id="WeSay.LexicalTools.MissingExampleSentenceFilterbth.cache" Name="WeSay.LexicalTools.MissingExampleSentenceFilterbth.cache" Source="..\..\sampleprojects\biatah\Cache\Missing ExampleSentence [bth] Filter.cache" />
			<File Id="WeSay.LexicalTools.MissingGlossFilteren.cache" Name="WeSay.LexicalTools.MissingGlossFilteren.cache" Source="..\..\sampleprojects\biatah\Cache\Missing SenseGloss [en] Filter.cache" />
		  </Component>
		</Directory>
		<Directory Id="biatahPicturesDir" Name="pictures">
		  <Component Id="biatahPictures" Guid="{FFC212BA-EBF6-41BD-A015-94BF95D3B2AA}">
			<File Id="waterBasket1.png" Name="waterBasket1.png" KeyPath="yes" Source="..\..\sampleprojects\biatah\pictures\waterBasket1.png" />
		  </Component>
		</Directory>
	</DirectoryRef>
  </Fragment>
</Wix>