<tasks>
  <task id="Dashboard">
	<tool class="WeSay.CommonTools.DashboardTool" assembly="CommonTools"/>
  </task>
  <task id="Words">
	<tool class="WeSay.LexicalTools.EntryDetailTool" assembly="LexicalTools"/>
  </task>

  <task>
	<tool class="WeSay.LexicalTools.LexFieldTool" assembly="LexicalTools">
	  <config class="WeSay.LexicalTools.LexFieldToolConfig" assembly="LexicalTools">
		<label>Add Meanings</label>
		<showfield>Gloss</showfield>
		<filter>
		  <field>Gloss</field>
		  <condition><missing/></condition>
		</filter>
	  </config>
	</tool>
  </task>

  <task>
	<tool class="WeSay.LexicalTools.LexFieldTool" assembly="LexicalTools">
	  <config class="WeSay.LexicalTools.LexFieldToolConfig" assembly="LexicalTools">
		<label>Add Examples</label>
		<showfield>Example</showfield>
		<filter>
		  <field>Example</field>
		  <condition><missing/></condition>
		</filter>
	  </config>
	</tool>
  </task>

  <task>
	<tool class="WeSay.CommonTools.PictureTool" assembly="CommonTools">
	  <config class="WeSay.CommonTools.PictureToolConfig" assembly="CommonTools">
		<label>Collect Words</label>
		<picture>RealWord.gif</picture>
	  </config>
	</tool>
  </task>

  <task>
	<tool class="WeSay.CommonTools.PictureTool" assembly="CommonTools">
	  <config class="WeSay.CommonTools.PictureToolConfig" assembly="CommonTools">
		<label>Semantic Domains</label>
		<picture>SemDom.gif</picture>
	  </config>
	</tool>
  </task>
</tasks>