<tasks>
  <components>
	<fieldInventory id="Default Field Inventory">
	  <fields>
		<field>
		  <name>EntryLexicalForm</name>
		  <visibility>Invisible</visibility>
		  <writingSystems />
		</field>
		<field>
		  <name>SenseGloss</name>
		  <visibility>Visible</visibility>
		  <writingSystems />
		</field>
		<field>
		  <name>ExampleSentence</name>
		  <visibility>Visible</visibility>
		  <writingSystems />
		</field>
		<field>
		  <name>ExampleTranslation</name>
		  <visibility>Invisible</visibility>
		  <writingSystems />
		</field>
